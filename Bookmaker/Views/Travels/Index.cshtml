@model IEnumerable<Bookmaker.Models.TravelIndex>

@functions
{
    HelperResult OK(Func<dynamic, HelperResult> nugget)
    {
        if (ViewBag.IsUpdatable) {
            return new HelperResult(w => nugget(null).WriteTo(w));
        }
        return new HelperResult(w => w.Write(""));
    }
}

@{
    ViewBag.Title = "Tous les voyages";
}

<h2 class="crud">@Html.ActionCrud("Voyages")</h2>

<table class="sortable" data-url='@Url.Action("Sort", "Travels")'>
<thead>
    <tr>
        @OK(@<th class="iconwidth"></th>)
        <th>
            N°
        </th>
        <th>
            Voyage
        </th>
        <th>
            Type
        </th>
        <th>
            Parties
        </th>
        <th>
            Tarifs
        </th>
        @OK(@<th class="iconwidth"></th>)
    </tr>
</thead>
<tbody>
@foreach (var line in Model)
{
    <tr>
        @OK(@<td>
            @Html.ActionLink("Edit", "Edit", new { id = line.Travel_ID }, new { @class = "edit" })
        </td>)
        <td class="handle" data-pos="@(line.Position - 1)">
            @line.Position
        </td>
        <td>
            @Html.ActionLink(@line.Title, "Details", new { id = line.Travel_ID })
        </td>
        <td>
            @line.TravelType
        </td>
        <td>
            @line.SectionsCount
        </td>
        <td>
            @line.PricesCount
        </td>
        @OK(@<td>
            @Html.ActionLink("Delete", "Delete", new { id = line.Travel_ID }, new { @class = "delete" })
        </td>)
    </tr>
}
</tbody>
</table>

@section JavaScript
{
    @Html.Partial("_SortScripts")
}