@model IEnumerable<Bookmaker.Models.BookletIndex>

@{
    ViewBag.Title = "Toutes les brochures";
}

<h2 class="crud">@Html.ActionCrud("Brochures")</h2>

<table>
<thead>
    <tr>
        <th class="iconwidth"></th>
        <th>
            Année
        </th>
        <th>
            Titre
        </th>
        <th>
            Lecture
        </th>
        <th class="iconwidth"></th>
        <th>
            Journées
        </th>
        <th>
            Séjours
        </th>
        <th class="iconwidth"></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { root_id = item.Booklet_ID, id = item.Booklet_ID }, new { @class = "edit" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.ActionLink(@item.Title, "Details", new { root_id = item.Booklet_ID, id = item.Booklet_ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TextReadOnly)
        </td>
        <td>
            @Html.ActionLink("Générer le fichier Word", "Generate", new { root_id = item.Booklet_ID, id = item.Booklet_ID }, new { @class = "icon doc_file", title = "Générer le fichier Word" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TravelsCount1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TravelsCount2)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { root_id = item.Booklet_ID, id = item.Booklet_ID }, new { @class = "delete" })
        </td>
    </tr>
}
</tbody>
</table>
