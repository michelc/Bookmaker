@model Bookmaker.Models.Travel

<h2 class="crud">
    @Html.ActionChildcrud("Tarifs", "Prices", Model.Travel_ID)
    @if ((Model.Prices.Count == 0) && (ViewBag.IsUpdatable)) {
    <text>/</text>
    @Html.ActionLink("Importer", "Import", "Prices", new { Parent_ID = Model.Travel_ID }, null)
    }
</h2>

<table>
<thead>
    <tr>
        <th class="iconwidth"></th>
        <th>
            Tarif
        </th>
        <th>
            30 à 34
        </th>
        <th>
            35 à 39
        </th>
        <th>
            40 à 44
        </th>
        <th>
            45 à 49
        </th>
        <th>
            50 à 55
        </th>
        <th>
            Notes
        </th>
        <th class="iconwidth"></th>
    </tr>
</thead>
<tbody>
@foreach (var line in Model.Prices)
{
    <tr>
        <td>
            @Html.ActionLink("Modifier", "Edit", "Prices", new { id = line.Price_ID }, new { @class = "edit" })
        </td>
        <td>
            @Html.ActionLink(@line.Title, "Details", "Prices", new { id = line.Price_ID }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => line.Price1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => line.Price2)
            @if (line.Price2 < line.Price1) { <span class="accessoire">@((line.Price2 - line.Price1).ToString())</span> }
        </td>
        <td>
            @Html.DisplayFor(modelItem => line.Price3)
            @if (line.Price2 < line.Price1) { <span class="accessoire">@((line.Price3 - line.Price1).ToString())</span> }
        </td>
        <td>
            @Html.DisplayFor(modelItem => line.Price4)
            @if (line.Price2 < line.Price1) { <span class="accessoire">@((line.Price4 - line.Price1).ToString())</span> }
        </td>
        <td>
            @Html.DisplayFor(modelItem => line.Price5)
            @if (line.Price2 < line.Price1) { <span class="accessoire">@((line.Price5 - line.Price1).ToString())</span> }
        </td>
        <td>
            @(string.IsNullOrEmpty(line.Notes) ? "" : "Oui")
        </td>
        <td>
            @Html.ActionLink("Supprimer", "Delete", "Prices", new { id = line.Price_ID }, new { @class = "delete" })
        </td>
    </tr>
}
</tbody>
</table>
